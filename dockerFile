# Dockerfile
FROM node:20-bookworm-slim

# Install Chromium + fonts + deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    chromium ca-certificates fonts-liberation fonts-noto-color-emoji \
    libasound2 libatk1.0-0 libatk-bridge2.0-0 libcups2 libxss1 libxshmfence1 \
    libnss3 libnspr4 libx11-6 libxcomposite1 libxdamage1 libxfixes3 \
    libxrandr2 libgbm1 libxkbcommon0 libgtk-3-0 \
 && rm -rf /var/lib/apt/lists/*

ENV PUPPETEER_SKIP_DOWNLOAD=true
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
WORKDIR /app
COPY package*.json ./
RUN npm ci --omit=dev
COPY . .
CMD ["node", "server.js"]
